{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "fruit-run",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "src/splash.html"
      },
      "game": {
        "entry": "src/game.html"
      }
    }
  },
  "media": {
    "dir": "public"
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create Reverse Snake Game",
        "description": "Create a new Reverse Snake game post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "permissions": {
    "reddit": {
      "enable": true,
      "asUser": [
        "SUBMIT_POST",
        "SUBMIT_COMMENT",
        "SUBSCRIBE_TO_SUBREDDIT"
      ]
    }
  },
  "triggers": {
    "onAppInstall": "/internal/triggers/on-app-install"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  },
  "dev": {
    "subreddit": "fruit_run_dev"
  }
}